<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

<link rel="stylesheet" href="/main.css">

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.5/socket.io.min.js"></script>
<script>
io = io.connect('http://localhost:7001')

// Send the ready event.
io.emit('ready')

// Listen for the new visitor event.
io.on('taskupdate', function(msg) {
var myDiv = $('.terminal');
    myDiv.append(msg.msg);
    myDiv.animate({ scrollTop: myDiv.prop("scrollHeight") - myDiv.height() }, 20);

})
</script>

<body>


<div class="container">
	<div class="row">
		<div class="col-sm-12">
		<pre class="terminal">
			Running grunt task {{name}}
		</pre>
		</div>
	</div>
</div>
</body>
