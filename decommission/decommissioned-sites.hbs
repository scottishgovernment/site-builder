# Nginx virtual host configuration for {{name}}

## http vhost for {{host}} ##
server {

    listen 80;
    server_name {{host}};

    set $args '';

{{#pages}}
    rewrite {{source}}
            {{target}}?via=$scheme://$host$uri permanent;
{{/pages}}

    # catch all redirect to the home page
    location / {
        rewrite ^ {{url}}?via=$scheme://$host$uri break;
    }

}

